<% let scrollable = "" %>
<% if (typeof modal.isBodyScrollable !== "undefined") { %>
<% scrollable = "modal-dialog-scrollable" %>
<% } %>
<% let zIndex = 1050 %>
<% if (typeof modal.zIndex !== "undefined") { %>
    <% zIndex = modal.zIndex %>
<% } %>
<% let size = "modal-xl"  %>
<% if (typeof modal.size !== "undefined") { %>
    <% size = modal.size %>
<% } %>

<div class="modal fade" id="<%= modal.id %>Modal" tabindex="-1" role="dialog"
     aria-labelledby="<%= modal.id %>ModalLabel" aria-hidden="true" style="z-index: <%= zIndex %>;">
    <div class="modal-dialog <%=size %> <%= scrollable %>" role="document">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header px-3 pt-3 pb-2">
                <span id="<%= modal.id %>Index" value="" style="display: none;"></span>
                <h5 id="<%= modal.id %>Title"><%= modal.title %></h5>
                <button id="<%= modal.id %>ModalBtn" type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span class="text-white" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row" id="<%= modal.id %>">
                        <% if (!bodyFile) { %>
                            <em> This widget failed to render due to missing 'tile.bodyId' or 'bodyFile' alternative </em>
                        <% } else { %>
                            <%# More complex card-body content %>
                            <%- include(bodyFile) %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div id="<%= modal.id %>ModalFooter" class="modal-footer">

            </div>
        </div>
    </div>
</div>
