    <div class="col-sm-12 col-md-4 col-lg-6">
        <%- include(card, {
        tile:{
        id:"printerManagmentConnectionLog",i:"fa-sticky-note",title:"Connection Log",class:"col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12",
        },
        status: {
        id: "printerManagementConnectionLogStatus",
        icon: "fa-info-circle",
