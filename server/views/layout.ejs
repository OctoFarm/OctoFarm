<% const base = './partials' %>
<% const navigation = base + '/Navigation' %>

<% const header = navigation + '/header.ejs' %>
<% const navbar = navigation + '/navbar.ejs' %>
<% const navbarLogo = navigation + '/navbarLogo.ejs' %>
<% const versionInformation = navigation + '/versionInformation.ejs' %>
<% const monitoringViews = navigation + '/monitoringViews.ejs' %>
<% const userDropDown = navigation + '/userDropDown.ejs' %>

<% const octofarmErrorModal = base + '/octofarm-error.modal.ejs'  %>
<% const modal = base + '/octofarm-modal.ejs' %>
<% let currentUserGroup = "User" %>
<% if(typeof currentUser !== "undefined") { %>
    <% currentUserGroup = currentUser.group %>
<% } %>
<% let monitoringSettings; %>
<% if(typeof serverSettings !== "undefined") { %>
    <% monitoringSettings = serverSettings.monitoringViews %>
<% } %>
<!DOCTYPE html>
<html lang="en" data-bs-color-scheme="<%= serverSettings.clientTheme.mode %>">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="color-scheme" content="dark light">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?<%= clientVersion %>">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?<%= clientVersion %>">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?<%= clientVersion %>">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg?<%= clientVersion %>" color="#5bbad5">
    <style>
        :root {
            --header-height: 2rem;
            --nav-width: 68px;
            --z-fixed: 100;
            --octofarm-highlight-colour: <%= serverSettings.clientTheme.octofarmHighlightColour %>;
            --octofarm-main-colour: <%= serverSettings.clientTheme.octofarmMainColour %>;
            --sidebar-colour-dark: <%= serverSettings.clientTheme.sidebarColourDark %>;
            --navbar-colour-dark: <%= serverSettings.clientTheme.navbarColourDark %>;
            --sidebar-colour-light: <%= serverSettings.clientTheme.sidebarColourLight %>;
            --navbar-colour-light: <%= serverSettings.clientTheme.navbarColourLight %>;
        }
    </style>
    <link rel="stylesheet" href="/assets/dist/vendor.css?<%= clientVersion %>"/>
    <link rel="stylesheet" href="/assets/dist/navigation.css?<%= clientVersion %>"/>
    <link rel="stylesheet" href="/assets/dist/overrides.css?<%= clientVersion %>"/>
    <link rel="stylesheet" href="/assets/dist/background.css?<%= clientVersion %>"/>
    <link rel="stylesheet" href="/assets/dist/octofarm.css?<%= clientVersion %>"/>
    <title><%= octoFarmPageTitle %>: <%= page %></title>
    <script src="/assets/jquery.min.js?<%= clientVersion %>"></script>
    <script src="/assets/bootbox.min.js?<%= clientVersion %>"></script>
    <script src="/assets/dist/vendor.min.js?<%= clientVersion %>"></script>
    <script src="/assets/dist/navbar.utils.min.js?<%= clientVersion %>"></script>
    <script src="/assets/dist/client-error.modal.min.js?<%= clientVersion %>"></script>
    <script src="/assets/dist/events.service.min.js?<%= clientVersion %>"></script>
</head>

<body id="body-pd">
<%- include(header, { monitoringSettings, currentUserGroup }) -%>
<%- include(navbar, { octoFarmPageTitle, currentUserGroup }) -%>
<!--Container Main start-->
    <%- body %>
    <%- include(octofarmErrorModal) %>
</body>


<!--Container Main end-->
<div class="modal fade" id="printerManagerModal" tabindex="-1" role="dialog"
     aria-labelledby="printerManagerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content ">
            <div class="modal-header px-3 pt-3 pb-2">
                <div id="printerSelectionWrapper" class="input-group mb-0" style="width:600px">
                    <div class="input-group-prepend">
                        <label id="printerManagerModalTitle" class="input-group-text p-1" for="printerSelection"></label>
                    </div>
                    <select class="custom-select p-1" id="printerSelection">

                    </select>
                </div>
                <span id="printerIndex" value="" style="display: none;"></span>
                <button id="printerManagerModalBtn" type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span class="text-white" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="connectionRow" class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2 mb-0 text-center" id="status">
                        <button id="pmStatus" type="button" class="btn btn-secondary mb-1" href="#"
                                target="_blank" disabled><i class="fas fa-spinner fa-spin"></i></button>
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3 mb-0" id="printerPortDrop">

                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-2 col-xl-2 mb-0" id="printerBaudDrop">

                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3 mb-0" id="printerProfileDrop">

                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-2 col-xl-2 mb-0" id="printerConnect">

                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div id="printerControls"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" id="printerManagerFooter">
                <button id="" type="button" class="btn btn-light" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<%- include(modal, {
    modal:{
        id: "lostConnection",
        title: "<i class='fa-solid fa-satellite-dish text-purple'></i> Lost Connection to Server...",
        isBodyScrollable: "false",
        centered: true,
        size: "modal-md",
        noClose: true
    },
    bodyFile:'./ModalContents/lostConnection.ejs'
})
%>


<div class="modal fade" id="connectionModal" tabindex="0" role="dialog" aria-labelledby="connectionModal"
     aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="connectionModalLabel">Printer Connect/Disconnect</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="text-white" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div id="printerConnection" class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="" type="button" class="btn btn-light" data-dismiss="modal">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
<%- include(modal, {
    modal:{
        id:"bulkActionProgress", title:"Bulk Action Progress: ", isBodyScrollable: "true"
    },
    bodyFile:'./PrinterManager/bulkActionsProgress.modal.ejs'
    })
%>
<%- include(modal, {
    modal:{
        id:"printerSelect", title:"Printer Select: "
    },
    bodyFile:'./PrinterManager/printerSelect.modal.ejs'
    })
%>
<%- include(modal, {
    modal:{
        id:"bulkPrintSetup", title:"Multi-Print Setup: "
    },
    bodyFile:'./PrinterManager/bulkPrintSetup.modal.ejs'
    })
%>

<%- include(modal, {
    modal:{
        id:"about", title:"About OctoFarm", isBodyScrollable: "true"
    },
    bodyFile:'./ModalContents/about.ejs'
    })
%>

<%- include(modal, {
    modal:{
    id:"clientSettings", title:"Client Settings", isBodyScrollable: "true"
    },
    bodyFile:'./ModalContents/clientSettings.ejs'
})
%>

<% if(currentUserGroup === "Administrator") { %>
    <%- include(modal, {
    modal:{
    id:"informationLogs", title:"System Logs", isBodyScrollable: "true"
    },
    bodyFile:'./ModalContents/systemLogs.ejs'
    })
    %>
    <%- include(modal, {
    modal:{
    id:"informationSystem", title:"System Information", isBodyScrollable: "true"
    },
    bodyFile:'./ModalContents/systemInformation.ejs'
    })
    %>
<% } %>


</html>
