<div class="grid-stack-item"
<% if (tile.maxh) { %>
     gs-max-h="<%= tile.maxh %>"
        <% } %>
     gs-id="<%= tile.id %>"
     id="<%= tile.id %>" <%# Ease of use %>
     gs-w="<%= tile.w %>"
     gs-h="<%= tile.h %>"
     gs-min-h="<%= tile.mh %>"
     gs-min-w="<%= tile.mw %>">
    <div class="grid-stack-item-content card text-white bg-dark">
        <div class="card-header dashHeader p-0">
            <% if (!!locals.titleFile) { %>
                <%# Extra title elements %>
                <%- include(titleFile) %>
            <% } %>
        </div>
        <% if (!!tile.customBody) { %>
            <div class="card-body <%= tile.c %>" id="<%= tile.bodyId %>"></div>
        <% } else { %>
            <div class="card-body pb-0 <%= tile.c %>">
                <% if (!!tile.bodyId) { %>
                    <div id="<%= tile.bodyId %>"></div>
                <% } else { %>
                    <% if (!bodyFile) { %>
                        <em> This widget failed to render due to missing 'tile.bodyId' or 'bodyFile' alternative </em>
                    <% } else { %>
                        <%# More complex card-body content %>
                        <%- include(bodyFile) %>
                    <% } %>
                <% } %>
            </div>
        <% } %>



    </div>
</div>
