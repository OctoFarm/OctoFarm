{
  "name": "octofarm",
  "version": "1.6.2",
  "main": "server/app.js",
  "scripts": {
    "start": "cd server && npm run start",
    "restart": "pm2 restart OctoFarm",
    "pupdate": "pm2 update",
    "stop": "pm2 stop OctoFarm",
    "stop:delete": "pm2 delete OctoFarm",
    "prettier": "prettier --write \"./server/**/*.js\" \"./client/**/*.js\"",
    "install-server": "cd server && npm ci",
    "install-client": "cd client && npm ci",
    "dev-server": "cd server && npm run dev",
    "dev-client": "cd client && npm run dev",
    "setup-dev": "npm run install-server && npm run install-client",
    "update-octofarm": "git pull && npm run install-server && pm2 restart OctoFarm",
    "prepare": "husky install",
    "release": "release-it --ci --config release-it.js",
    "release:dry": "release-it --dry-run --ci --config release-it.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OctoFarm/OctoFarm"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@release-it/conventional-changelog": "^5.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ejs-js": "^0.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^8.0.0",
    "prettier": "^2.6.0",
    "release-it": "^15.2.0"
  },
  "pkg": {
    "scripts": [
      "package.json",
      "../.env"
    ],
    "assets": [
      "../.env",
      "server/views/**/*",
      "node_modules/**/*",
      "server/utis/bg_default.jpg",
      "routes/fallbacks/**/*"
    ],
    "targets": [
      "node14-linux-arm64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4"
  }
}
