{
  "name": "octofarm-entry",
  "version": "1.2.0",
  "main": "server/app.js",
  "scripts": {
    "start": "cd server && npm run start",
    "dev": "cd server && nodemon ./app.js",
    "restart": "pm2 restart OctoFarm",
    "pupdate": "pm2 update",
    "stop": "pm2 stop OctoFarm",
    "stop:delete": "pm2 delete OctoFarm",
    "prettier": "prettier --write \".server/**/*.js\" \"./client/**/*.js\"\"",
    "server-install": "cd server && npm install",
    "server-dev": "cd server && npm run dev",
    "dev-install": "npm run server-install && npm run client-install",
    "client-install": "cd client && npm install",
    "client-dev": "cd client && npm run dev",
    "client-build": "cd client && npm run build",
    "start-alpha": "cd server && npm run start-alpha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OctoFarm/OctoFarm"
  }
}
